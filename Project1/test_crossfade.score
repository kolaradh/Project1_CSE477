<?xml version="1.0"?>
<score bpm="120" beatspermeasure="4">

  <instrument instrument="WavetableInstrument">

    <!-- Table A only (saw+sine) -->
    <note measure="1" beat="1" duration="2" note="A4" crossfade="0.0" vel="1.0" pan="0.2"/>

    <!-- Crossfade halfway between table A and B -->
    <note measure="3" beat="1" duration="2" note="C5" crossfade="0.5" vel="1.0" pan="0.5"/>

    <!-- Full table B with glissando up to D5 over 1 second -->
    <note measure="5" beat="1" duration="3" note="B4" crossfade="1.0" vel="1.0" gliss="74" glisstime="1.0" pan="0.8"/>

    <!-- Dynamic glide down example -->
    <note measure="8" beat="1" duration="2" note="E5" crossfade="0.3" vel="1.0" gliss="64" glisstime="0.5" pan="0.4"/>

  </instrument>
</score>
